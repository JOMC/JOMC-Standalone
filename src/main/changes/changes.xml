<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Changelog</title>
    <author email="schulte2005@users.sourceforge.net">Christian Schulte</author>
  </properties>
  <body>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-1" date="2009-10-04"/>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-2" date="2009-10-06">
      <action dev="schulte2005" type="fix"><![CDATA[Corrected a NullPointerException thrown by method <code>next()</code>
      of the <code>NamingEnumeration</code> returned by method <code>list(Name)</code> of class
      <code>org.jomc.standalone.naming.StandaloneContext</code>.]]>
      </action>
      <action dev="schulte2005" type="fix"><![CDATA[Corrected an illegal Binding returned by method <code>next()</code>
      of the <code>NamingEnumeration</code> returned by method <code>listBindings(Name)</code> of class
      <code>org.jomc.standalone.naming.StandaloneContext</code>.]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-3" date="2009-11-18">
      <action dev="schulte2005" type="update"><![CDATA[
      Maven POM updates.<ul>
      <li>Updated JOMC dependencies to 1.0-alpha-8.</li>
      <li>Updated JOMC Logging dependencies to 1.0-alpha-5.</li>
      </ul>]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-4" date="2009-11-20">
      <action dev="schulte2005" type="update"><![CDATA[
      Maven POM updates.<ul>
      <li>Updated JOMC dependencies to 1.0-alpha-9.</li>
      <li>Updated JOMC Logging dependencies to 1.0-alpha-6.</li>
      </ul>]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-5" date="2010-02-02">
      <action dev="schulte2005" type="update"><![CDATA[
      Added <code>jomc-standalone-model</code> artifact declaring types used for basic declarative transaction
      support.]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-alpha-6" date="2010-02-06">
      <action dev="schulte2005" type="update"><![CDATA[
      Added <code>ExceptionsType</code> and <code>ExceptionType</code> complex types to the
      <code>jomc-standalone-1.0.xsd</code> schema to support declarative exception handling.]]>
      </action>
      <action dev="schulte2005" type="fix"><![CDATA[
      Updated class <code>org.jomc.standalone.ri.StandaloneInvoker</code> to correctly rollback transactions
      when a non-initiating frame marked an invocation for rollback.]]>
      </action>
    </release>
  </body>
</document>
